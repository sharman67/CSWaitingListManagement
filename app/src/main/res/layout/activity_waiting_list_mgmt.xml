<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaitingListMgmt">

    <TextView
        android:id="@+id/appBanner"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#C6CDEF"
        android:text="CS Waiting List Mgmt"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="parent" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="125dp"
    app:layout_constraintTop_toBottomOf="@+id/appBanner">


    <Button
        android:id="@+id/idAddStudentbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Student"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:onClick="AddStudentFn"/>

    <Button
        android:id="@+id/idEditStudentbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Student"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:onClick="UpdateStudentFn"/>

    <Button
        android:id="@+id/idRemoveStudentbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Student"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:onClick="DeleteStudentFn"/>
    <Button
        android:id="@+id/idViewWaitingbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="View Waiting List"
        android:textSize="20dp"
        android:onClick="WaitingListFn"/>
</LinearLayout></androidx.constraintlayout.widget.ConstraintLayout>